<h1>Detalles del Carrito</h1>
<h2>Carrito ID: {{cart._id}}</h2>
{{#if cart.products.length}}
<ul>
    {{#each cart.products}}
    <li>Producto: {{this.product.title}}<br><br> Cantidad:
        {{this.quantity}}<br><br><span>{{this.product.description}}</span>
        <!-- Formulario para eliminar el producto -->
        <form action="/api/carts/deleteProduct" method="POST" style="display:inline;">
            <input type="hidden" name="cartId" value="{{../cart._id}}">
            <input type="hidden" name="productId" value="{{this.product._id}}">
            <button type="submit">Eliminar Producto</button>
        </form>
    </li>
    {{/each}}
</ul>
<!-- Formulario para vaciar el carrito -->
<form action="/api/carts/emptyCart" method="POST" style="display:inline;">
    <input type="hidden" name="cartId" value="{{cart._id}}">
    <button type="submit">Vaciar Carrito</button>
</form>
{{else}}
<p>No hay productos en este carrito.</p>
{{/if}}
<a href="/api/carts">Volver a la lista de carritos</a>
<a href="/">Home</a>